{
  "name": "electron-updater-example",
  "version": "0.7.1",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Matt Haggard",
  "scripts": {
    "start": "electron .",
    "publish": "build -mwl -p always"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^20.8.2"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^2.21.4"
  },
  "build": {
    "appId": "com.github.lycbel2.electronupdaterexample",
    "publish": [
      {
        "provider": "github",
        "owner": "lycbel2",
        "repo": "electron-updater-example"
      }
    ],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ]

    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {

    },
    "linux": {

      "target": [
        "deb"
      ]
    }
  }
}
