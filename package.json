{
  "name": "electron-updater-example",
  "version": "0.7.3",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": {
    "name": "Barney Rubble",
    "email": "b@rubble.com",
    "url": "http://barnyrubble.tumblr.com/"
  },
  "scripts": {
    "start": "electron .",
    "publish": "build -wm -p always"
  },
  "devDependencies": {
    "electron": "^2.0.4",
    "electron-builder": "^20.17.2"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^2.23.3"
  },
  "build": {
    "appId": "com.github.lycbel2.electronupdaterexample",
    "publish": [
      {
        "provider": "github",
        "owner": "lycbel2",
        "repo": "electron-updater-example"
      }
    ],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        "deb"
      ]
    }
  }
}
